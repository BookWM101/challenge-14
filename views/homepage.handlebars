<main class="main-content">
  <h1>Welcome to the Homepage</h1>
  {{#if loggedIn}}
    <p>Logged in as {{username}}</p>
  {{/if}}
  <div class="posts-container">
    {{#each posts}}
      <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <a href="/post/{{this._id}}">Read more</a>
      </div>
    {{/each}}
  </div>
</main>

